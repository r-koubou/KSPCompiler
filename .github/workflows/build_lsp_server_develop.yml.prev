name: Build LSP Server (develop)

on:
  push:
    branches:
      - develop
    paths-ignore:
      - "**.md"

  workflow_dispatch:

jobs:
  #--------------------------------------------------------------
  # Build LSP Server
  #--------------------------------------------------------------
  build-lsp-server-omnisharp:
    uses: ./.github/workflows/build_lsp_server_omnisharp.yml
    secrets: inherit
    with:
      build-configuration: Debug

  build-lsp-server-language-server-framework:
    uses: ./.github/workflows/build_lsp_server_language_server_framework.yml
    secrets: inherit
    with:
      build-configuration: Debug
